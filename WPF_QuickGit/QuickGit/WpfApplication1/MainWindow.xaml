        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded_1">
    <Grid Name="RootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90*"/>
            <ColumnDefinition Width="427*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="71,33,0,0" TextWrapping="Wrap" Text="Welcome" VerticalAlignment="Top" Height="22" Width="100" FontSize="16"/>
        <Button Content="Add Client repo" HorizontalAlignment="Left" Margin="29,84,0,0" VerticalAlignment="Top" Width="161" Click="Button_Click_1" Grid.ColumnSpan="2"/>
        <StackPanel x:Name="ClientsList" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="111" Margin="29,122,0,0" VerticalAlignment="Top" Width="161"/>
        <StackPanel x:Name="GitButtonsContainer" Grid.Column="1" HorizontalAlignment="Left" Height="111" Margin="116,122,0,0" VerticalAlignment="Top" Width="149" MouseDown="GitButtonsContainer_MouseDown"/>
    </Grid>
</Window>
