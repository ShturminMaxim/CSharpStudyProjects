<Window x:Class="DBFirst.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <ListBox x:Name="lBox" HorizontalAlignment="Left" Height="300" Margin="10,10,0,0" VerticalAlignment="Top" Width="299" SelectionChanged="lBox_SelectionChanged"/>
        <TextBox x:Name="catName" HorizontalAlignment="Left" Height="23" Margin="335,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="catName_TextChanged"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="335,38,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
