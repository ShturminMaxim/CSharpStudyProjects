<Window x:Class="MiniCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="FirstNumber" HorizontalAlignment="Left" Height="23" Margin="61,127,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="78" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="SecondNumber" HorizontalAlignment="Left" Height="22" Margin="199,127,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="72"/>
        <TextBox x:Name="Result" HorizontalAlignment="Left" Height="22" Margin="318,127,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="59"/>
        <Button x:Name="makeResult" Content="=" HorizontalAlignment="Left" Margin="281,127,0,0" VerticalAlignment="Top" Width="25" Click="Button_Click"/>
        <StackPanel HorizontalAlignment="Left" Height="90" Margin="144,95,0,0" VerticalAlignment="Top" Width="50">
            <Button Content="+" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Click="Button_Click_1"/>
            <Button Content="-" Click="Button_Click_1"/>
            <Button Content="/" Click="Button_Click_1"/>
            <Button Content="*" Click="Button_Click_1"/>
        </StackPanel>
        <Button Content="Clear" HorizontalAlignment="Left" Margin="400,127,0,0" VerticalAlignment="Top" Width="75" Height="22" Click="Button_Click_2"/>

    </Grid>
</Window>
